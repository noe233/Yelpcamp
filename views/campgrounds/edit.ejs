<% layout('/layout/boilerPlate') %>
    <div class="row">
        <h1 class="text-center">Edit New Campground</h1>
    <div class="col-6 offset-3">
        <form action="/campgrounds/<%= campground01._id%>/edit" method="post" class="needs-validation" novalidate enctype="multipart/form-data">
            <div class="mb-3">
              <label for="title" class="form-label">Title</label>
              <input type="text" class="form-control" id="title" name='newCampground[title]' value='<%=campground01.title%>' required>
            </div>
            <div class="mb-3">
              <label for="location" class="form-label">Location</label>
              <input type="text" class="form-control" id="location" name='newCampground[location]'  value='<%=campground01.location%>' required>
            </div>
            <div class="mb-3">
                <label for="price" class="form-label">Price</label>
                <input type="text" class="form-control" id="price" placeholder="$0.00" name='newCampground[price]'  value='<%=campground01.price%>' required>
              </div>
              <div>
                <label class="mb-2">Upload Images</label>
                </div>
              <div class="input-group mb-3">
                <input type="file" name="image" class="form-control" id="inputGroupFile02">
                <label class="input-group-text" for="inputGroupFile02">Upload</label>
              </div>
         
              <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea type="text" class="form-control" id="description" name='newCampground[description]'  value='<%=campground01.description%>' required></textarea>
              </div>
            <div class="d-grid gap-2 d-md-flex justify-content-center">
            <button type="submit" class="btn btn-primary">Update campground</button>
       
            </div>
        </form>
        <a  class="d-grid gap-2 d-md-flex justify-content-center" href="/campgrounds/<%= campground01._id %>">Back to Campground</a>    
    </div>
    </div>

